---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';
import CategorySwitch from "../components/CategorySwitch.astro";
import rawStations from "../data/stations-gr.json";
import { slugify } from "../lib/slug";
import { Image } from "astro:assets";

const radddioURL = "https://apple.co/4lNPQAH";
const radioAppIconUrl = "/radddio-app-icon.png";
const ogImage = "/e-radio-og-image.png";
const radddioBadgeUrl = "/radddio-badge.svg";
// Sort by votes (popularity) descending, treating null as 0
const allStations = rawStations
  .sort((a, b) => (b.votes || 0) - (a.votes || 0));

// Pagination settings
const STATIONS_PER_PAGE = 50;
const page = 1;
const totalStations = allStations.length;
const totalPages = Math.ceil(totalStations / STATIONS_PER_PAGE);

// Get stations for this page
const startIndex = (page - 1) * STATIONS_PER_PAGE;
const endIndex = startIndex + STATIONS_PER_PAGE;
const topStations = allStations.slice(startIndex, endIndex);

// Generate page numbers to display (show current and nearby pages)
const generatePageNumbers = () => {
  const pages = [];
  const maxPagesToShow = 5;
  let startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2));
  let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
  
  if (endPage - startPage < maxPagesToShow - 1) {
    startPage = Math.max(1, endPage - maxPagesToShow + 1);
  }
  
  for (let i = startPage; i <= endPage; i++) {
    pages.push(i);
  }
  return pages;
};

const pageNumbers = generatePageNumbers();

const siteRoot = "https://e-radio.github.io";
const canonical = `${siteRoot}/`;
const pageTitle = "Radio Stations in Greece – Live Online | E-Radio";
const pageDescription = `Discover and listen to ${totalStations} popular live Greek radio stations. Stream music, news, and talk radio online, explore top picks by genre and city, and find your next favorite station.`;
const ogImageUrl = `${siteRoot}${ogImage}`;

// Structured data (JSON-LD)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${siteRoot}/#website`,
  "name": "E-Radio Greece",
  "url": siteRoot,
  "description": pageDescription,
  "image": ogImageUrl
};
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO 
    slot="seo"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogImage={ogImageUrl}
    keywords="Greek radio, live radio, Greece stations, online radio, radio streaming"
    robots="index, follow"
    author="E-Radio Greece"
    structuredData={structuredData}
  />
  <div class="mb-4">
    <h1 class="display-5 fw-bold mb-2">Greek Radio Stations</h1>
    <h2 class="lead text-muted">Discover {totalStations} live radio stations from Greece. Sorted by popularity.</h2>
    <p class="text-muted small">Showing stations {startIndex + 1}–{Math.min(endIndex, totalStations)} of {totalStations}</p>
  </div>
  <CategorySwitch current="stations" />
  <div class="station-list border border-light-subtle rounded-3 overflow-hidden">
    {topStations.map((station, index) => (
      <div class={`station-item position-relative ${index !== topStations.length - 1 ? 'border-bottom border-light-subtle' : ''}`} itemscope itemtype="https://schema.org/RadioStation">
        {/* Overlay link to station detail */}
        <a href={`/stations/${station.slug}/`} class="stretched-link" aria-label={`Go to ${station.name}`} itemprop="url"></a>
        <div class="station-item-body p-3">
          <div class="row align-items-center g-3">

              {/* Station Icon */}
              <div class="col-auto">
                {station.favicon ? (
                  <Image
                    src={station.favicon}
                    alt={`${station.name} Logo`}
                    class="rounded station-logo"
                    width={60}
                    height={60}
                    itemprop="image"
                    loading={index < 10 ? "eager" : "lazy"}
                    fetchpriority={index < 10 ? "high" : "auto"}
                  />
                ) : (
                  <Image
                    src={radioAppIconUrl}
                    alt="Radddio App Icon"
                    class="rounded station-logo"
                    width={60}
                    height={60}
                    itemprop="image"
                    loading={index < 10 ? "eager" : "lazy"}
                    fetchpriority={index < 10 ? "high" : "auto"}
                  />
                )}
              </div>

              {/* Station Info */}
              <div class="col flex-grow-1">
                  <h3 class="mb-1 fs-6 fw-bold text-dark" itemprop="name">{station.name}</h3>
                  <p class="small text-muted mb-1">
                    {station.state ? <span itemprop="addressLocality"><i class="bi bi-geo-alt me-1" aria-hidden="true"></i>{station.state}</span> : null}
                    {station.bitrate ? <span class="ms-2"><i class="bi bi-soundwave me-1" aria-hidden="true"></i>{station.bitrate} kbps</span> : null}
                  </p>
                  <div class="d-flex gap-2 flex-wrap">
                    {station.genres && station.genres.slice(0, 3).map((genre) => (
                      <a
                        href={`/genres/${slugify(genre)}/`}
                        class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill text-decoration-none genre-badge-link"
                      >
                        {genre}
                      </a>
                    ))}
                  </div>
              </div>

            {/* Language & Action */}
            <div class="col-auto text-end d-md-block">
              {/* Radddio badge sits above the stretched link */}
              <a href={radddioURL} class="text-decoration-none radddio-badge" target="_blank" rel="nofollow noopener" aria-label={`Listen to ${station.name} on Radddio App`}>
                <Image src={radddioBadgeUrl} alt="Radddio App Badge" width={144} height={47} loading={index < 10 ? "eager" : "lazy"} fetchpriority={index < 10 ? "high" : "auto"} />
              </a>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  {/* Pagination */}
  <nav aria-label="Page navigation" class="mt-5">
    <ul class="pagination justify-content-center">
      {/* Previous Button */}
      <li class={`page-item ${page === 1 ? 'disabled' : ''}`}>
        <a class="page-link" href={page > 1 ? (page - 1 === 1 ? '/' : `/page/${page - 1}/`) : '/'}>
          Previous
        </a>
      </li>

      {/* First page link if not visible */}
      {pageNumbers[0] > 1 && (
        <>
          <li class="page-item">
            <a class="page-link" href="/">1</a>
          </li>
          {pageNumbers[0] > 2 && (
            <li class="page-item disabled">
              <span class="page-link">...</span>
            </li>
          )}
        </>
      )}

      {/* Page Numbers */}
      {pageNumbers.map((pageNum) => (
        <li class={`page-item ${pageNum === page ? 'active' : ''}`}>
          <a class="page-link" href={pageNum === 1 ? '/' : `/page/${pageNum}/`}>
            {pageNum}
          </a>
        </li>
      ))}

      {/* Last page link if not visible */}
      {pageNumbers[pageNumbers.length - 1] < totalPages && (
        <>
          {pageNumbers[pageNumbers.length - 1] < totalPages - 1 && (
            <li class="page-item disabled">
              <span class="page-link">...</span>
            </li>
          )}
          <li class="page-item">
            <a class="page-link" href={`/page/${totalPages}/`}>{totalPages}</a>
          </li>
        </>
      )}

      {/* Next Button */}
      <li class={`page-item ${page === totalPages ? 'disabled' : ''}`}>
        <a class="page-link" href={page < totalPages ? `/page/${page + 1}/` : '/'}>
          Next
        </a>
      </li>
    </ul>
  </nav>
</Layout>