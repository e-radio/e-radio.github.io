---
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";
import CategorySwitch from "../components/CategorySwitch.astro";
import rawStations from "../data/stations-gr.json";
import { slugify } from "../lib/slug";

const radddioURL = "https://apple.co/4lNPQAH";
const radioAppIconUrl = "/radddio-app-icon.png";
const radddioBadgeUrl = "/radddio-badge.svg";
const ogImage = "/e-radio-og-image.png";

const topStations = [...rawStations]
  .sort((a, b) => (b.votes || 0) - (a.votes || 0))
  .slice(0, 20);

const siteRoot = "https://e-radio.github.io";
const canonical = `${siteRoot}/top-rated/`;
const pageTitle = "Top Rated Greek Radio Stations | E-Radio";
const pageDescription = "Listen to the 20 highest-rated Greek radio stations ranked by listener votes, featuring todayâ€™s most popular streams, trusted favorites, and standout picks.";
const ogImageUrl = `${siteRoot}${ogImage}`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "@id": `${canonical}#collection`,
  name: pageTitle,
  url: canonical,
  description: pageDescription,
  image: ogImageUrl,
};
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO
    slot="seo"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogImage={ogImageUrl}
    keywords="top rated radio, greek radio, popular radio greece"
    robots="index, follow"
    author="E-Radio Greece"
    structuredData={structuredData}
  />
  <div class="mb-4">
    <h1 class="display-5 fw-bold mb-2">Popular Greek Radio Stations Online</h1>
    <h2 class="lead text-muted">The most-voted Greek radio stations, refreshed daily.</h2>
    <p class="text-muted small">Showing the top {topStations.length} stations by votes.</p>
  </div>
  <CategorySwitch current="top-rated" />
  <div class="station-list border border-light-subtle rounded-3 overflow-hidden">
    {topStations.map((station, index) => (
      <div class={`station-item position-relative ${index !== topStations.length - 1 ? 'border-bottom border-light-subtle' : ''}`} itemscope itemtype="https://schema.org/RadioStation">
        <a href={`/stations/${station.slug}/`} class="stretched-link" aria-label={`Go to ${station.name}`} itemprop="url"></a>
        <div class="station-item-body p-3">
          <div class="row align-items-center g-3">
            <div class="col-auto">
              {station.favicon ? (
                <img src={station.favicon} alt={`${station.name} logo`} class="rounded station-logo" itemprop="image" />
              ) : (
                <img src={radioAppIconUrl} alt="Radddio app icon" class="rounded station-logo" itemprop="image" />
              )}
            </div>
            <div class="col flex-grow-1">
              <h3 class="mb-1 fs-6 fw-bold text-dark" itemprop="name">{station.name}</h3>
              <p class="small text-muted mb-1">
                {station.state ? <span itemprop="addressLocality"><i class="bi bi-geo-alt me-1" aria-hidden="true"></i>{station.state}</span> : null}
                {station.bitrate ? <span class="ms-2"><i class="bi bi-soundwave me-1" aria-hidden="true"></i>{station.bitrate} kbps</span> : null}
                <span class="ms-2"><i class="bi bi-bar-chart me-1" aria-hidden="true"></i>{station.votes || 0} votes</span>
              </p>
              <div class="d-flex gap-2 flex-wrap">
                {station.genres && station.genres.slice(0, 3).map((genre) => (
                  <a
                    href={`/genres/${slugify(genre)}/`}
                    class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill text-decoration-none genre-badge-link"
                  >
                    {genre}
                  </a>
                ))}
              </div>
            </div>
            <div class="col-auto text-end d-md-block">
              <a href={radddioURL} class="text-decoration-none radddio-badge" target="_blank" rel="nofollow noopener" aria-label={`Listen to ${station.name} on Radddio App`}><img src={radddioBadgeUrl} alt="Radddio app badge" /></a>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</Layout>
