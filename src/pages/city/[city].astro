---
import Layout from "../../layouts/Layout.astro";
import SEO from "../../components/SEO.astro";
import CategorySwitch from "../../components/CategorySwitch.astro";
import rawStations from "../../data/stations-gr.json";

const radddioURL = "https://apple.co/4lNPQAH";
const radioAppIconUrl = "/radddio-app-icon.png";
const radddioBadgeUrl = "/radddio-badge.svg";
const ogImage = "/e-radio-og-image.png";

export function getStaticPaths() {
  const transliterateGreek = (input: string) => {
    const map: Record<string, string> = {
      Α: "a", Β: "v", Γ: "g", Δ: "d", Ε: "e", Ζ: "z", Η: "i", Θ: "th", Ι: "i", Κ: "k", Λ: "l", Μ: "m",
      Ν: "n", Ξ: "x", Ο: "o", Π: "p", Ρ: "r", Σ: "s", Τ: "t", Υ: "y", Φ: "f", Χ: "ch", Ψ: "ps", Ω: "o",
      α: "a", β: "v", γ: "g", δ: "d", ε: "e", ζ: "z", η: "i", θ: "th", ι: "i", κ: "k", λ: "l", μ: "m",
      ν: "n", ξ: "x", ο: "o", π: "p", ρ: "r", σ: "s", ς: "s", τ: "t", υ: "y", φ: "f", χ: "ch", ψ: "ps", ω: "o",
    };
    return input
      .normalize("NFD")
      .replace(/\p{Diacritic}/gu, "")
      .split("")
      .map((char) => map[char] ?? char)
      .join("");
  };

  const baseCitySlug = (city: string) =>
    transliterateGreek(city || "")
      .toLowerCase()
      .trim()
      .replace(/['"]/g, "")
      .replace(/[^a-z0-9]+/g, "-")
      .replace(/^-+|-+$/g, "")
      .slice(0, 80) || "other";
  const grouped = new Map<string, typeof rawStations>();
  for (const station of rawStations) {
    const city = (station.state || "Other").trim() || "Other";
    if (!grouped.has(city)) {
      grouped.set(city, []);
    }
    grouped.get(city)?.push(station);
  }
  const slugCounts = new Map<string, number>();
  return [...grouped.entries()]
    .map(([city, stations]) => {
      const base = baseCitySlug(city);
      const nextCount = (slugCounts.get(base) || 0) + 1;
      slugCounts.set(base, nextCount);
      const slug = nextCount > 1 ? `${base}-${nextCount}` : base;
      const sorted = stations
        .slice()
        .sort((a, b) => (b.votes || 0) - (a.votes || 0));
      return {
        params: { city: slug },
        props: { city, slug, stations: sorted },
      };
    });
}

const { city, stations, slug } = Astro.props;

const siteRoot = "https://e-radio.github.io";
const canonical = `${siteRoot}/city/${slug}/`;
const pageTitle = `${city} Radio Stations | E-Radio`;
const pageDescription = `Listen to live radio stations from ${city} and explore curated local favorites, popular streams, and community picks from this area.`;
const ogImageUrl = `${siteRoot}${ogImage}`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "@id": `${canonical}#collection`,
  name: pageTitle,
  url: canonical,
  description: pageDescription,
  image: ogImageUrl,
};
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO
    slot="seo"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogImage={ogImageUrl}
    keywords={`${city} radio, ${city} live radio, greek radio ${city}`}
    robots="index, follow"
    author="E-Radio Greece"
    structuredData={structuredData}
  />
  <div class="mb-4">
    <p class="small text-muted mb-2"><a class="link-muted" href="/city/">← Back to cities</a></p>
    <h1 class="display-6 fw-bold mb-2">{city} Radio Stations</h1>
    <p class="lead text-muted mb-0">Browse {stations.length} station{stations.length === 1 ? "" : "s"} from {city}.</p>
  </div>
  <CategorySwitch current="city" />
  <section class="mt-4">
    <div class="station-list border border-light-subtle rounded-3 overflow-hidden">
      {stations.map((station, index) => (
        <div class={`station-item position-relative ${index !== stations.length - 1 ? 'border-bottom border-light-subtle' : ''}`}>
          <a href={`/stations/${station.slug}/`} class="stretched-link" aria-label={`Go to ${station.name}`}></a>
          <div class="station-item-body p-3">
            <div class="row align-items-center g-3">
              <div class="col-auto">
                {station.favicon ? (
                  <img
                    src={station.favicon}
                    alt={`${station.name} logo`}
                    class="rounded station-logo"
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    width="60"
                    height="60"
                  />
                ) : (
                  <img
                    src={radioAppIconUrl}
                    alt="Radddio app icon"
                    class="rounded station-logo"
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    width="60"
                    height="60"
                  />
                )}
              </div>
              <div class="col flex-grow-1">
                <h3 class="mb-1 fs-6 fw-bold text-dark">{station.name}</h3>
                <p class="small text-muted mb-1">
                  {station.bitrate ? <span><i class="bi bi-soundwave me-1"></i>{station.bitrate} kbps</span> : null}
                  {station.genres && station.genres.length > 0 ? (
                    <span class="ms-2">
                      <i class="bi bi-music-note-beamed me-1"></i>{station.genres.slice(0, 2).join(", ")}
                    </span>
                  ) : null}
                </p>
              </div>
              <div class="col-auto text-end d-md-block">
                <a href={radddioURL} class="text-decoration-none radddio-badge" target="_blank" aria-label="Listen on Radddio"><img src={radddioBadgeUrl} alt="Radddio app badge" loading="lazy" decoding="async" fetchpriority="low" /></a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>
