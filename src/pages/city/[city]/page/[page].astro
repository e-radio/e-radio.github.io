---
import Layout from "../../../../layouts/Layout.astro";
import SEO from "../../../../components/SEO.astro";
import CategorySwitch from "../../../../components/CategorySwitch.astro";
import rawStations from "../../../../data/stations-gr.json";
import { slugify } from "../../../../lib/slug";

const radddioURL = "https://apple.co/4lNPQAH";
const radioAppIconUrl = "/radddio-app-icon.png";
const radddioBadgeUrl = "/radddio-badge.svg";
const ogImage = "/e-radio-og-image.png";

const PAGE_SIZE = 20;

export function getStaticPaths() {
  const PAGE_SIZE = 20;
  const transliterateGreek = (input: string) => {
    const map: Record<string, string> = {
      Α: "a", Β: "v", Γ: "g", Δ: "d", Ε: "e", Ζ: "z", Η: "i", Θ: "th", Ι: "i", Κ: "k", Λ: "l", Μ: "m",
      Ν: "n", Ξ: "x", Ο: "o", Π: "p", Ρ: "r", Σ: "s", Τ: "t", Υ: "y", Φ: "f", Χ: "ch", Ψ: "ps", Ω: "o",
      α: "a", β: "v", γ: "g", δ: "d", ε: "e", ζ: "z", η: "i", θ: "th", ι: "i", κ: "k", λ: "l", μ: "m",
      ν: "n", ξ: "x", ο: "o", π: "p", ρ: "r", σ: "s", ς: "s", τ: "t", υ: "y", φ: "f", χ: "ch", ψ: "ps", ω: "o",
    };
    return input
      .normalize("NFD")
      .replace(/\p{Diacritic}/gu, "")
      .split("")
      .map((char) => map[char] ?? char)
      .join("");
  };

  const baseCitySlug = (city: string) =>
    transliterateGreek(city || "")
      .toLowerCase()
      .trim()
      .replace(/['"]/g, "")
      .replace(/[^a-z0-9]+/g, "-")
      .replace(/^-+|-+$/g, "")
      .slice(0, 80) || "other";

  const grouped = new Map<string, typeof rawStations>();
  for (const station of rawStations) {
    const city = (station.state || "Other").trim() || "Other";
    if (!grouped.has(city)) {
      grouped.set(city, []);
    }
    grouped.get(city)?.push(station);
  }

  const slugCounts = new Map<string, number>();
  const paths: { params: { city: string; page: string }; props: { city: string; slug: string; stations: typeof rawStations; page: number; totalPages: number } }[] = [];

  for (const [city, stations] of grouped.entries()) {
    const base = baseCitySlug(city);
    const nextCount = (slugCounts.get(base) || 0) + 1;
    slugCounts.set(base, nextCount);
    const slug = nextCount > 1 ? `${base}-${nextCount}` : base;
    const sorted = stations
      .slice()
      .sort((a: typeof rawStations[0], b: typeof rawStations[0]) => (b.votes || 0) - (a.votes || 0));

    const totalPages = Math.ceil(sorted.length / PAGE_SIZE);
    if (totalPages <= 1) continue;

    for (let page = 2; page <= totalPages; page += 1) {
      paths.push({
        params: { city: slug, page: String(page) },
        props: { city, slug, stations: sorted, page, totalPages },
      });
    }
  }

  return paths;
}

const { city, stations, slug, page, totalPages } = Astro.props;
const totalStations = stations.length;
const startIndex = (page - 1) * PAGE_SIZE;
const endIndex = startIndex + PAGE_SIZE;
const pagedStations = stations.slice(startIndex, endIndex);

const siteRoot = "https://e-radio.github.io";
const canonical = `${siteRoot}/city/${slug}/page/${page}/`;
const pageTitle = `${city} Radio Stations – Page ${page} | E-Radio`;
const pageDescription = `Listen to live radio stations from ${city}. Page ${page} of ${totalPages} with local favorites, popular streams, and community picks.`;
const ogImageUrl = `${siteRoot}${ogImage}`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "@id": `${canonical}#collection`,
  name: pageTitle,
  url: canonical,
  description: pageDescription,
  image: ogImageUrl,
};
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO
    slot="seo"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogImage={ogImageUrl}
    keywords={`${city} radio, ${city} live radio, greek radio ${city}`}
    robots="index, follow"
    author="E-Radio Greece"
    structuredData={structuredData}
  />
  <div class="mb-4">
    <p class="small text-muted mb-2"><a class="link-muted" href={`/city/${slug}/`}>← Back to {city}</a></p>
    <h1 class="display-6 fw-bold mb-2">{city} Radio Stations</h1>
    <h2 class="lead text-muted mb-0">Page {page} of {totalPages}. Showing stations {startIndex + 1}–{Math.min(endIndex, totalStations)} of {totalStations}.</h2>
  </div>
  <CategorySwitch current="city" />
  <section class="mt-4">
    <div class="station-list border border-light-subtle rounded-3 overflow-hidden">
      {pagedStations.map((station: typeof rawStations[0], index: number) => (
        <div class={`station-item position-relative ${index !== pagedStations.length - 1 ? 'border-bottom border-light-subtle' : ''}`} itemscope itemtype="https://schema.org/RadioStation">
          <a href={`/stations/${station.slug}/`} class="stretched-link" aria-label={`Go to ${station.name}`} itemprop="url"></a>
          <div class="station-item-body p-3">
            <div class="row align-items-center g-3">
              <div class="col-auto">
                {station.favicon ? (
                  <img
                    src={station.favicon}
                    alt={`${station.name} logo`}
                    class="rounded station-logo"
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    width="60"
                    height="60"
                    itemprop="image"
                  />
                ) : (
                  <img
                    src={radioAppIconUrl}
                    alt="Radddio app icon"
                    class="rounded station-logo"
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    width="60"
                    height="60"
                    itemprop="image"
                  />
                )}
              </div>
              <div class="col flex-grow-1">
                <h3 class="mb-1 fs-6 fw-bold text-dark" itemprop="name">{station.name}</h3>
                <p class="small text-muted mb-1">
                  {station.bitrate ? <span><i class="bi bi-soundwave me-1"></i>{station.bitrate} kbps</span> : null}
                </p>
                <div class="d-flex gap-2 flex-wrap">
                  {station.genres && station.genres.slice(0, 3).map((genre) => (
                    <a
                      href={`/genres/${slugify(genre)}/`}
                      class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill text-decoration-none genre-badge-link"
                    >
                      {genre}
                    </a>
                  ))}
                </div>
              </div>
              <div class="col-auto text-end d-md-block">
                <a href={radddioURL} class="text-decoration-none radddio-badge" target="_blank" rel="nofollow noopener" aria-label={`Listen to ${station.name} on Radddio App`}><img src={radddioBadgeUrl} alt="Radddio app badge" loading="lazy" decoding="async" fetchpriority="low" /></a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
  <nav aria-label="City pagination" class="mt-5">
    <ul class="pagination justify-content-center">
      <li class={`page-item ${page === 1 ? 'disabled' : ''}`}>
        <a class="page-link" href={page > 1 ? (page - 1 === 1 ? `/city/${slug}/` : `/city/${slug}/page/${page - 1}/`) : '#'}>
          Previous
        </a>
      </li>
      {Array.from({ length: totalPages }, (_, i) => i + 1).map((pageNum) => (
        <li class={`page-item ${pageNum === page ? 'active' : ''}`}>
          <a class="page-link" href={pageNum === 1 ? `/city/${slug}/` : `/city/${slug}/page/${pageNum}/`}>
            {pageNum}
          </a>
        </li>
      ))}
      <li class={`page-item ${page === totalPages ? 'disabled' : ''}`}>
        <a class="page-link" href={page < totalPages ? `/city/${slug}/page/${page + 1}/` : '#'}>
          Next
        </a>
      </li>
    </ul>
  </nav>
</Layout>
