---
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";
import CategorySwitch from "../components/CategorySwitch.astro";
import rawStations from "../data/stations-gr.json";
import { slugify } from "../lib/slug";
import { Image } from "astro:assets";

const radddioURL = "https://apple.co/4lNPQAH";
const radioAppIconUrl = "/radddio-app-icon.png";
const radddioBadgeUrl = "/radddio-badge.svg";
const ogImage = "/e-radio-og-image.png";

const HIGH_BITRATE_THRESHOLD = 320;
const highQualityStations = rawStations
  .filter((station) => Number(station.bitrate || 0) >= HIGH_BITRATE_THRESHOLD)
  .sort((a, b) => (b.bitrate || 0) - (a.bitrate || 0));

const PAGE_SIZE = 20;
const page = 1;
const totalStations = highQualityStations.length;
const totalPages = Math.ceil(totalStations / PAGE_SIZE);
const startIndex = (page - 1) * PAGE_SIZE;
const endIndex = startIndex + PAGE_SIZE;
const pagedStations = highQualityStations.slice(startIndex, endIndex);

const siteRoot = "https://e-radio.github.io";
const canonical = `${siteRoot}/high-quality/`;
const pageTitle = "High Quality (320 kbps) Greek Radio Streams | E-Radio";
const pageDescription = `Listen to ${totalStations} Greek radio streams broadcasting in 320 kbps or higher for premium sound, clearer vocals, and richer music across popular stations.`;
const ogImageUrl = `${siteRoot}${ogImage}`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "@id": `${canonical}#collection`,
  name: pageTitle,
  url: canonical,
  description: pageDescription,
  image: ogImageUrl,
};
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO
    slot="seo"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogImage={ogImageUrl}
    keywords="high quality radio, 320 kbps radio streams, greek radio"
    robots="index, follow"
    author="E-Radio Greece"
    structuredData={structuredData}
  />
  <div class="mb-4">
    <h1 class="display-5 fw-bold mb-2">Greek High Quality Radio Streams</h1>
    <h2 class="lead text-muted">Only stations broadcasting at 320 kbps or higher.</h2>
    <p class="text-muted small">Found {totalStations} high-bitrate station{totalStations === 1 ? "" : "s"}.</p>
    {totalPages > 1 && (
      <p class="text-muted small">Showing stations {startIndex + 1}â€“{Math.min(endIndex, totalStations)} of {totalStations}</p>
    )}
  </div>
  <CategorySwitch current="high-quality" />
  {totalStations === 0 ? (
    <div class="alert alert-warning" role="status">
      No stations currently meet the 320 kbps threshold.
    </div>
  ) : (
    <div class="station-list border border-light-subtle rounded-3 overflow-hidden">
      {pagedStations.map((station, index) => (
        <div class={`station-item position-relative ${index !== pagedStations.length - 1 ? 'border-bottom border-light-subtle' : ''}`} itemscope itemtype="https://schema.org/RadioStation">
          <a href={`/stations/${station.slug}/`} class="stretched-link" aria-label={`Go to ${station.name}`} itemprop="url"></a>
          <div class="station-item-body p-3">
            <div class="row align-items-center g-3">
              <div class="col-auto">
                {station.favicon ? (
                  <Image src={station.favicon} alt={`${station.name} logo`} class="rounded station-logo" width={60} height={60} itemprop="image" />
                ) : (
                  <Image src={radioAppIconUrl} alt="Radddio app icon" class="rounded station-logo" width={60} height={60} itemprop="image" />
                )}
              </div>
              <div class="col flex-grow-1">
                <h3 class="mb-1 fs-6 fw-bold text-dark" itemprop="name">{station.name}</h3>
                <p class="small text-muted mb-1">
                  {station.state ? <span itemprop="addressLocality"><i class="bi bi-geo-alt me-1" aria-hidden="true"></i>{station.state}</span> : null}
                  <span class="ms-2"><i class="bi bi-soundwave me-1" aria-hidden="true"></i>{station.bitrate} kbps</span>
                  {station.codec ? <span class="ms-2"><i class="bi bi-file-music me-1" aria-hidden="true"></i>{String(station.codec).toUpperCase()}</span> : null}
                </p>
                <div class="d-flex gap-2 flex-wrap">
                  {station.genres && station.genres.slice(0, 3).map((genre) => (
                    <a
                      href={`/genres/${slugify(genre)}/`}
                      class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill text-decoration-none genre-badge-link"
                    >
                      {genre}
                    </a>
                  ))}
                </div>
              </div>
              <div class="col-auto text-end d-md-block">
                <a href={radddioURL} class="text-decoration-none radddio-badge" target="_blank" rel="nofollow noopener" aria-label={`Listen to ${station.name} on Radddio App`}><Image src={radddioBadgeUrl} alt="Radddio app badge" width={144} height={47} /></a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  )}
  {totalPages > 1 && (
    <nav aria-label="High quality pagination" class="mt-5">
      <ul class="pagination justify-content-center">
        <li class={`page-item ${page === 1 ? 'disabled' : ''}`}>
          <a class="page-link" href={page > 1 ? (page - 1 === 1 ? '/high-quality/' : `/high-quality/page/${page - 1}/`) : '/high-quality/'}>
            Previous
          </a>
        </li>
        {Array.from({ length: totalPages }, (_, i) => i + 1).map((pageNum) => (
          <li class={`page-item ${pageNum === page ? 'active' : ''}`}>
            <a class="page-link" href={pageNum === 1 ? '/high-quality/' : `/high-quality/page/${pageNum}/`}>
              {pageNum}
            </a>
          </li>
        ))}
        <li class={`page-item ${page === totalPages ? 'disabled' : ''}`}>
          <a class="page-link" href={page < totalPages ? `/high-quality/page/${page + 1}/` : (page === 1 ? '/high-quality/' : `/high-quality/page/${page}/`)}>
            Next
          </a>
        </li>
      </ul>
    </nav>
  )}
</Layout>
