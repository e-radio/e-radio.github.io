---
import Layout from "../../layouts/Layout.astro";
import SEO from "../../components/SEO.astro";
import CategorySwitch from "../../components/CategorySwitch.astro";
import rawStations from "../../data/stations-gr.json";
import { slugify } from "../../lib/slug";
import { Image } from "astro:assets";

const radddioURL = "https://apple.co/4lNPQAH";
const radioAppIconUrl = "/radddio-app-icon.png";
const radddioBadgeUrl = "/radddio-badge.svg";
const ogImage = "/e-radio-og-image.png";

export function getStaticPaths() {
  const transliterateGreek = (input: string) => {
    const map: Record<string, string> = {
      Α: "a", Β: "v", Γ: "g", Δ: "d", Ε: "e", Ζ: "z", Η: "i", Θ: "th", Ι: "i", Κ: "k", Λ: "l", Μ: "m",
      Ν: "n", Ξ: "x", Ο: "o", Π: "p", Ρ: "r", Σ: "s", Τ: "t", Υ: "y", Φ: "f", Χ: "ch", Ψ: "ps", Ω: "o",
      α: "a", β: "v", γ: "g", δ: "d", ε: "e", ζ: "z", η: "i", θ: "th", ι: "i", κ: "k", λ: "l", μ: "m",
      ν: "n", ξ: "x", ο: "o", π: "p", ρ: "r", σ: "s", ς: "s", τ: "t", υ: "y", φ: "f", χ: "ch", ψ: "ps", ω: "o",
    };
    return input
      .normalize("NFD")
      .replace(/\p{Diacritic}/gu, "")
      .split("")
      .map((char) => map[char] ?? char)
      .join("");
  };

  const baseRegionSlug = (region: string) =>
    transliterateGreek(region || "")
      .toLowerCase()
      .trim()
      .replace(/['"]/g, "")
      .replace(/[^a-z0-9]+/g, "-")
      .replace(/^-+|-+$/g, "")
      .slice(0, 80) || "other";

  const grouped = new Map<string, typeof rawStations>();
  for (const station of rawStations) {
    const region = (station.state || "Other").trim() || "Other";
    if (!grouped.has(region)) {
      grouped.set(region, []);
    }
    grouped.get(region)?.push(station);
  }

  const slugCounts = new Map<string, number>();
  return [...grouped.entries()]
    .map(([region, stations]) => {
      const base = baseRegionSlug(region);
      const nextCount = (slugCounts.get(base) || 0) + 1;
      slugCounts.set(base, nextCount);
      const slug = nextCount > 1 ? `${base}-${nextCount}` : base;
      const sorted = stations
        .slice()
        .sort((a, b) => (b.votes || 0) - (a.votes || 0));
      return {
        params: { region: slug },
        props: { region, slug, stations: sorted },
      };
    });
}

const { region, stations, slug } = Astro.props;

const STATIONS_PER_PAGE = 20;
const page = 1;
const totalStations = stations.length;
const totalPages = Math.ceil(totalStations / STATIONS_PER_PAGE);
const startIndex = (page - 1) * STATIONS_PER_PAGE;
const endIndex = startIndex + STATIONS_PER_PAGE;
const pagedStations = stations.slice(startIndex, endIndex);

const siteRoot = "https://e-radio.github.io";
const canonical = `${siteRoot}/region/${slug}/`;
const pageTitle = `${region} Radio Stations | E-Radio`;
const pageDescription = `Listen to live radio stations from ${region} and explore curated local favorites, popular streams, and community picks from this region.`;
const ogImageUrl = `${siteRoot}${ogImage}`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "@id": `${canonical}#collection`,
  name: pageTitle,
  url: canonical,
  description: pageDescription,
  image: ogImageUrl,
};
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO
    slot="seo"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogImage={ogImageUrl}
    keywords={`${region} radio, ${region} live radio, greek radio ${region}`}
    robots="index, follow"
    author="E-Radio Greece"
    structuredData={structuredData}
  />
  <div class="mb-4">
    <p class="small text-muted mb-2"><a class="link-muted" href="/region/">← Back to regions</a></p>
    <h1 class="display-6 fw-bold mb-2">{region} Radio Stations</h1>
    <p class="lead text-muted mb-0">Browse {stations.length} station{stations.length === 1 ? "" : "s"} from {region}.</p>
    {totalPages > 1 && (
      <p class="text-muted small mt-2">Showing stations {startIndex + 1}–{Math.min(endIndex, totalStations)} of {totalStations}</p>
    )}
  </div>
  <CategorySwitch current="region" />
  <section class="mt-4">
    <div class="station-list border border-light-subtle rounded-3 overflow-hidden">
      {pagedStations.map((station, index) => (
        <div class={`station-item position-relative ${index !== pagedStations.length - 1 ? 'border-bottom border-light-subtle' : ''}`} itemscope itemtype="https://schema.org/RadioStation">
          <a href={`/stations/${station.slug}/`} class="stretched-link" aria-label={`Go to ${station.name}`} itemprop="url"></a>
          <div class="station-item-body p-3">
            <div class="row align-items-center g-3">
              <div class="col-auto">
                {station.favicon ? (
                  <Image
                    src={station.favicon}
                    alt={`${station.name} logo`}
                    class="rounded station-logo"
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    width={60}
                    height={60}
                    itemprop="image"
                  />
                ) : (
                  <Image
                    src={radioAppIconUrl}
                    alt="Radddio app icon"
                    class="rounded station-logo"
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    width={60}
                    height={60}
                    itemprop="image"
                  />
                )}
              </div>
              <div class="col flex-grow-1">
                <h3 class="mb-1 fs-6 fw-bold text-dark" itemprop="name">{station.name}</h3>
                <p class="small text-muted mb-1">
                  {station.bitrate ? <span><i class="bi bi-soundwave me-1"></i>{station.bitrate} kbps</span> : null}
                </p>
                <div class="d-flex gap-2 flex-wrap">
                  {station.genres && station.genres.slice(0, 3).map((genre) => (
                    <a
                      href={`/genres/${slugify(genre)}/`}
                      class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill text-decoration-none genre-badge-link"
                    >
                      {genre}
                    </a>
                  ))}
                </div>
              </div>
              <div class="col-auto text-end d-md-block">
                <a href={radddioURL} class="text-decoration-none radddio-badge" target="_blank" rel="nofollow noopener" aria-label={`Listen to ${station.name} on Radddio App`}><Image src={radddioBadgeUrl} alt="Radddio app badge" width={144} height={47} loading="lazy" decoding="async" fetchpriority="low" /></a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
  {totalPages > 1 && (
    <nav aria-label="Region pagination" class="mt-5">
      <ul class="pagination justify-content-center">
        <li class={`page-item ${page === 1 ? 'disabled' : ''}`}>
          <a class="page-link" href={page > 1 ? (page - 1 === 1 ? `/region/${slug}/` : `/region/${slug}/page/${page - 1}/`) : `/region/${slug}/`}>
            Previous
          </a>
        </li>
        {Array.from({ length: totalPages }, (_, i) => i + 1).map((pageNum) => (
          <li class={`page-item ${pageNum === page ? 'active' : ''}`}>
            <a class="page-link" href={pageNum === 1 ? `/region/${slug}/` : `/region/${slug}/page/${pageNum}/`}>
              {pageNum}
            </a>
          </li>
        ))}
        <li class={`page-item ${page === totalPages ? 'disabled' : ''}`}>
          <a class="page-link" href={page < totalPages ? `/region/${slug}/page/${page + 1}/` : (page === 1 ? `/region/${slug}/` : `/region/${slug}/page/${page}/`)}>
            Next
          </a>
        </li>
      </ul>
    </nav>
  )}
</Layout>
