---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';
import rawStations from "../../data/stations-gr.json";

const radddioURL = "https://apple.co/4lNPQAH";
const radioAppIconUrl = "/radddio-app-icon.png";
const ogImage = "/e-radio-og-image.png";
const radddioBadgeUrl = "/radddio-badge.svg";

export async function getStaticPaths() {
  // Sort stations
  const allStations = rawStations.sort((a, b) => (b.votes || 0) - (a.votes || 0));
  
  const STATIONS_PER_PAGE = 50;
  const totalPages = Math.ceil(allStations.length / STATIONS_PER_PAGE);
  
  // Generate paths for each page
  const paths = [];
  for (let i = 1; i <= totalPages; i++) {
    paths.push({
      params: { page: String(i) },
      props: { allStations, currentPage: i, totalPages }
    });
  }
  
  return paths;
}

interface Props {
  allStations: typeof rawStations;
  currentPage: number;
  totalPages: number;
}

const { allStations, currentPage, totalPages } = Astro.props as Props;

// Pagination settings
const STATIONS_PER_PAGE = 50;
const page = currentPage;
const totalStations = allStations.length;

// Get stations for this page
const startIndex = (page - 1) * STATIONS_PER_PAGE;
const endIndex = startIndex + STATIONS_PER_PAGE;
const topStations = allStations.slice(startIndex, endIndex);

// Generate page numbers to display
const generatePageNumbers = () => {
  const pages = [];
  const maxPagesToShow = 5;
  let startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2));
  let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
  
  if (endPage - startPage < maxPagesToShow - 1) {
    startPage = Math.max(1, endPage - maxPagesToShow + 1);
  }
  
  for (let i = startPage; i <= endPage; i++) {
    pages.push(i);
  }
  return pages;
};

const pageNumbers = generatePageNumbers();

const siteRoot = "https://e-radio.github.io";
const canonical = page === 1 ? `${siteRoot}/` : `${siteRoot}/page/${page}/`;
const pageTitle = `Radio Stations in Greece ‚Äì Page ${page} ‚Äì Live Online | E-Radio`;
const pageDescription = `Browse the most popular live Greek radio stations. Sorted by community votes. Page ${page} of ${totalPages}.`;
const ogImageUrl = `${siteRoot}${ogImage}`;

// Structured data (JSON-LD)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "@id": `${canonical}#collection`,
  "name": pageTitle,
  "url": canonical,
  "description": pageDescription,
  "image": ogImageUrl,
  "isPartOf": {
    "@type": "WebSite",
    "name": "E-Radio Greece",
    "url": siteRoot
  },
  "hasPart": topStations.map(station => ({
    "@type": "RadioStation",
    "name": station.name,
    "url": `${siteRoot}/stations/${station.slug}/`,
    "areaServed": station.state || "Greece"
  }))
};
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO 
    slot="seo"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogImage={ogImageUrl}
    keywords="Greek radio, live radio, Greece stations, online radio, radio streaming"
    robots="index, follow"
    author="E-Radio Greece"
    prevUrl={page > 1 ? page === 2 ? `${siteRoot}/` : `${siteRoot}/page/${page - 1}/` : undefined}
    nextUrl={page < totalPages ? `${siteRoot}/page/${page + 1}/` : undefined}
    structuredData={structuredData}
  />
  <div class="mb-4">
    <h1 class="display-5 fw-bold mb-2">Greek Radio Stations</h1>
    <p class="lead text-muted">Discover {totalStations} live radio stations from Greece. Sorted by popularity.</p>
    <p class="text-muted small">Showing stations {startIndex + 1}‚Äì{Math.min(endIndex, totalStations)} of {totalStations}</p>
  </div>

  <div class="station-list border border-light-subtle rounded-3 overflow-hidden">
    {topStations.map((station, index) => (
      <div class={`station-item position-relative ${index !== topStations.length - 1 ? 'border-bottom border-light-subtle' : ''}`}>
        <a href={`/stations/${station.slug}/`} class="stretched-link" style="position:absolute;inset:0;z-index:2;" aria-label={`Go to ${station.name}`}></a>
        <div class="station-item-body p-3">
          <div class="row align-items-center g-3">
            {/* Rank */}
            <div class="col-auto">
              <div class="d-flex align-items-center justify-content-center">
                <span class="text-secondary fw-semibold">{startIndex + index + 1}</span>
              </div>
            </div>

            {/* Votes */}
            <div class="col-auto">
              <div class="votes-badge bg-light rounded d-flex flex-column align-items-center justify-content-center p-2" style="width: 50px; height: 50px;">
                <span class="small fw-bold">{station.votes || 0}</span>
                <span class="badge-text small" style="font-size: 0.65rem;">votes</span>
              </div>
            </div>

            {/* Station Icon */}
            <div class="col-auto">
              {station.favicon ? (
                <img src={station.favicon} alt={`${station.name} Logo`}class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
              ) : (
                <img src={radioAppIconUrl} alt="Radddio App Icon" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
              )}
            </div>

            {/* Station Info */}
            <div class="col flex-grow-1">
              <h2 class="mb-1 fs-6 fw-bold text-dark">{station.name}</h2>
              <p class="mb-2 small text-muted" style="margin: 0;">
                {station.state && <span>üìç {station.state}</span>}
                {station.bitrate && <span class="ms-2">üéµ {station.bitrate} kbps</span>}
              </p>
              <div class="d-flex gap-2 flex-wrap">
                {station.genres && station.genres.slice(0, 3).map((genre) => (
                  <span class="badge bg-dark-subtle text-dark-emphasis rounded-pill">{genre}</span>
                ))}
              </div>
            </div>

            {/* Action */}
            <div class="col-auto text-end d-none d-md-block">
              <a href={radddioURL} class="text-decoration-none radddio-badge" target="_blank" aria-label="Listen On Radddio" style="position:relative;z-index:3;"><img src={radddioBadgeUrl} alt="Radddio App Badge" /></a>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  {/* Pagination */}
  <nav aria-label="Page navigation" class="mt-5">
    <ul class="pagination justify-content-center">
      {/* Previous Button */}
      <li class={`page-item ${page === 1 ? 'disabled' : ''}`}>
        <a class="page-link" href={page > 1 ? page === 2 ? '/' : `/page/${page - 1}/` : '#'}>
          Previous
        </a>
      </li>

      {/* First page link if not visible */}
      {pageNumbers[0] > 1 && (
        <>
          <li class="page-item">
            <a class="page-link" href="/">1</a>
          </li>
          {pageNumbers[0] > 2 && (
            <li class="page-item disabled">
              <span class="page-link">...</span>
            </li>
          )}
        </>
      )}

      {/* Page Numbers */}
      {pageNumbers.map((pageNum) => (
        <li class={`page-item ${pageNum === page ? 'active' : ''}`}>
          <a class="page-link" href={pageNum === 1 ? '/' : `/page/${pageNum}/`}>
            {pageNum}
          </a>
        </li>
      ))}

      {/* Last page link if not visible */}
      {pageNumbers[pageNumbers.length - 1] < totalPages && (
        <>
          {pageNumbers[pageNumbers.length - 1] < totalPages - 1 && (
            <li class="page-item disabled">
              <span class="page-link">...</span>
            </li>
          )}
          <li class="page-item">
            <a class="page-link" href={`/page/${totalPages}/`}>{totalPages}</a>
          </li>
        </>
      )}

      {/* Next Button */}
      <li class={`page-item ${page === totalPages ? 'disabled' : ''}`}>
        <a class="page-link" href={page < totalPages ? `/page/${page + 1}/` : '#'}>
          Next
        </a>
      </li>
    </ul>
  </nav>
</Layout>
